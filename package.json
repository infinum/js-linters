{
	"name": "js-linters",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"bootstrap": "lerna bootstrap --no-ci",
		"fix": "manypkg fix",
		"publish": "lerna publish",
		"clean": "lerna clean && lerna exec -- rm -rf ./node_modules",
		"test": "lerna run test --no-sort"
	},
	"lint-staged": {
		"*.{js,scss,md,ts,component.html}": "prettier --write"
	},
	"dependencies": {
		"@manypkg/cli": "^0.19.1",
		"husky": "^8.0.1",
		"lerna": "~5.0.0",
		"lint-staged": "^12.4.2",
		"prettier": "2.6.2"
	}
}
