{
  "name": "js-linters",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean && lerna exec -- rm -rf ./node_modules"
  },
  "devDependencies": {
    "husky": "~7.0.4",
    "lerna": "~4.0.0",
    "lint-staged": "~11.2.6",
    "prettier": "2.4.1"
  },
  "lint-staged": {
    "*.{js,scss,md,ts,component.html}": "prettier --write"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  }
}
