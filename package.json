{
  "name": "js-linters",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "bootstrap": "npm ci",
    "fix": "manypkg fix",
    "clean": "npm exec --ws -c 'rm -rf ./node_modules' && rm -rf ./node_modules"
  },
  "lint-staged": {
    "*.{js,scss,md,ts,component.html}": "prettier --write"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.1",
    "husky": "~7.0.4",
    "lerna": "~4.0.0",
    "lint-staged": "~11.2.6",
    "prettier": "2.4.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
